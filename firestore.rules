rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read all profiles (Leaderboard), but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tasks - users can manage their own tasks
    match /tasks/{taskId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Activity Feed - allow public read for radar, authenticated write
    match /activity_feed/{activityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Quiz History
    match /quiz_history/{historyId} {
      allow read, write: if request.auth != null;
    }

    // Study Checklists
    match /study_checklists/{checklistId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }

    // Mulakhasat (Summaries)
    match /summaries/{summaryId} {
      allow read: if true; // Public read
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow updating likes (or full update by owner) - simplified for now
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
    }

    // Ads - PUBLIC READ, Public Click Tracking (Update clicks only), Admin Full Write
    match /ads/{adId} {
      allow read: if true;
      // Allow anyone to increment clicks (for tracking)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks']);
      // Ideally restrict other writes to admin
      allow create, delete, write: if request.auth != null;
    }

    // Quiz History - ensure privacy
    match /quiz_history/{historyId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Folders & Materials
    match /folders/{folderId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }
    match /materials/{materialId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }

    // System Configuration (Feature Toggles)
    match /system_config/{configId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
